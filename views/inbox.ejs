<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inbox</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <header class="navbar">
    <nav>
      <a href="/inbox">Inbox</a>
      <a href="/outbox">Outbox</a>
      <a href="/compose">Compose</a>
      <a href="/spam">Spam</a>
      <a href="/signout">Sign Out</a>
    </nav>
  </header>

  <main class="main-content">
    <section class="emails">
      <h2>Inbox</h2>
      <ul class="email-list">
        <% emails.forEach(function(email) { %>
        <li class="email-item">
          <a href="/emails/<%= email.id %>" class="email-link">
            <span class="email-sender"><strong><%= email.sender_name %></strong></span>
            -
            <span class="email-subject"><%= email.subject %></span>
          </a>
          <span class="email-date"><%= email.created_at %></span>
        </li>
        <% }); %>
      </ul>
    </section>

    <div class="pagination">
      <% if (page > 1) { %>
      <a href="/inbox?page=<%= page - 1 %>" class="pagination-link">Previous</a>
      <% } %>
      <span class="pagination-info">Page <%= page %> of <%= totalPages %></span>
      <% if (page < totalPages) { %>
      <a href="/inbox?page=<%= page + 1 %>" class="pagination-link">Next</a>
      <% } %>
    </div>
  </main>
</body>

</html>
